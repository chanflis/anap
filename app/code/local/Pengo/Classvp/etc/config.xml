<?xml version="1.0"?>
<config>
<modules>
    <Pengo_Classvp>
      <version>0.1.0</version>
    </Pengo_Classvp>
     </modules>
    <global>
    <helpers>
      <classvp>
        <class>Pengo_Classvp_Helper</class>
      </classvp>
    </helpers>
	<blocks>
	  <classvp>
		<class>Pengo_Classvp_Block</class>
	  </classvp>
	</blocks>
    	<events>
    		<controller_action_layout_load_before>
    			<observers>
    				<pengo_classvp_cart_observer>
    					<type>model</type>
    					<class>Pengo_Classvp_Model_Cart_Observer</class>
    					<method>calculateTotal</method>
    				</pengo_classvp_cart_observer>
    			</observers>
    		</controller_action_layout_load_before>
    	</events>
    </global> 
</config>